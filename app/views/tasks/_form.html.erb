<%= form_for @task, remote: true do |f| %>
  

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :deadline %>
    <%= f.datetime_select :deadline %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
